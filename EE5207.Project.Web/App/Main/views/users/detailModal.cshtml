<form id="frm_detail_course" name="userDetailForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>User Details</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">@L("Name")</label>
                    <div class="form-line">
                        <input class="form-control" type="text" name="Name" ng-model="vm.user.fullName" readonly>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">Email</label>
                    <div class="form-line">
                        <input class="form-control" type="text" name="Email" ng-model="vm.user.emailAddress" readonly>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="course in vm.courses">
                        <td>{{course.name}}</td>
                        <td>{{course.percentage}} %</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            Close
        </button>
    </div>
</form>
<form id="frm_detail_course" name="courseDetailForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>Course Details</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">@L("Name")</label>
                    <div class="form-line">
                        <input class="form-control" type="text" name="Name" ng-model="vm.course.name" readonly>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">Venue</label>
                    <div class="form-line">
                        <input class="form-control" type="text" name="Venue" ng-model="vm.course.venue" readonly>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">Enrolled Students</label>
                    <div ng-repeat="student in vm.students">
                        <p>{{student}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">Student</label>
                    <div class="form-line">
                        <input class="form-control" type="text" name="Name" ng-model="vm.studentId">
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.markStudent(vm.studentId)">
            Mark
        </button>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
                Close
            </button>
        </div>

</form>
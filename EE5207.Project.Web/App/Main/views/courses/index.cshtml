<div class="row clearfix" ng-controller="app.views.courses.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    Courses
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <input type="text"
                       ng-model="search"
                       placeholder="Search..."
                       class="form-control"
                       width="50" />
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("Name")</th>
                            <th>Venue</th>
                            <th>Counducted Days</th>
                            <th>Time</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="course in vm.courses | filter : search">
                            <td>{{course.name}}</td>

                            <td>{{course.venue}}</td>
                            <td>{{course.conductedDays}}</td>
                            <td>{{course.time}}</td>


                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openCourseDetailModal(course)"><i class="material-icons">description</i>Start Course</a></li>
                                    @*<li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.markAttendance(course)"><i class="material-icons">done</i>Start Course</a></li>*@
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.enrollStudent(course)"><i class="material-icons">exit_to_app</i>Enroll</a></li>
                                    @if (IsGranted("Delete"))
                                    {
                                        <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(course)"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- ******************************************************** -->
                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openCourseCreationModal()">
                    <i class="material-icons">add</i>
                </button>
                
            </div>
        </div>
    </div>
</div>
<form id="frm_detail_course" name="attendanceForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>Mark Attendance</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">@L("Student")</label>
                    <div class="form-line">
                        <input class="form-control" type="text" name="Name" ng-model="vm.studentId">
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.mark()">
            Mark
        </button>
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            Close
        </button>
    </div>
</form>